create or replace procedure assign_grade(roll in number, marks in number, grade out varchar2)
is
begin
  if marks <= 1500 and marks >= 900 then
    grade := 'pass with dist';
  elsif marks <= 899 and marks >= 825 then
    grade := 'pass with first class';
  elsif marks <= 824 and marks >= 750 then
    grade := 'pass with second class';
  else
    grade := 'fail';
  end if;
end;
/

declare
  roll number;
  marks number;
  name varchar2(60);
  grade varchar2(30);
begin
  roll := &roll;
  select rollno, name, totalmark into roll, name, marks from result where rollno = roll;

  assign_grade(roll, marks, grade);

  dbms_output.put_line('Roll No: ' || roll);
  dbms_output.put_line('Name: ' || name);
  dbms_output.put_line('Marks: ' || marks);
  dbms_output.put_line('Grade: ' || grade);
end;
/
