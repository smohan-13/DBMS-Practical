iname varchar(50);
price float;
quantity int;
cursor cur1(p float) is select * from items where cost>=p;
begin
open cur1(&p);
loop 
fetch cur1 into iid,iname,price,quantity;
exit when cur1%notfound;
dbms_output.put_line(iid||iname||price||quantity);
end loop;
close cur1;
end;
