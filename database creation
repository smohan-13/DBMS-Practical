DO WHILE LOOP CODE:
package ll;

import java.sql.*;
import java.util.*;

public class MenuApp {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int choice;

        do {
            System.out.println("\n========= MENU =========");
            System.out.println("1. Create Database");
            System.out.println("2. Create Table");
            System.out.println("3. Insert Record");
            System.out.println("4. Display Records");
            System.out.println("5. Update Record");
            System.out.println("6. Exit");
            System.out.println("========================");
            System.out.print("Enter your choice: ");
            choice = sc.nextInt();

            try {
                // Load MySQL driver
                Class.forName("com.mysql.cj.jdbc.Driver");

                switch (choice) {
                    case 1: { // Create Database
                        Connection con = DriverManager.getConnection(
                                "jdbc:mysql://localhost:3306/", "root", "root");
                        Statement stm = con.createStatement();
                        String str = "CREATE DATABASE college";
                        stm.executeUpdate(str);
                        System.out.println("Database created.");
                        con.close();
                        break;
                    }
                    case 2: { // Create Table
                        Connection con = DriverManager.getConnection(
                                "jdbc:mysql://localhost:3306/college", "root", "root");
                        Statement stm = con.createStatement();
                        String str = "CREATE TABLE stud(rollno INT, Name VARCHAR(10), Class VARCHAR(10))";
                        stm.executeUpdate(str);
                        System.out.println("Table created.");
                        con.close();
                        break;
                    }
                    case 3: { // Insert Record
                        Connection con = DriverManager.getConnection(
                                "jdbc:mysql://localhost:3306/college", "root", "root");
                        Statement stm = con.createStatement();
                        System.out.print("Enter rollno: ");
                        int rollno = sc.nextInt();
                        sc.nextLine(); // consume newline
                        System.out.print("Enter name: ");
                        String name = sc.nextLine();
                        System.out.print("Enter class: ");
                        String cla = sc.nextLine();
                        String str = "INSERT INTO stud VALUES(" + rollno + ", '" + name + "', '" + cla + "')";
                        stm.executeUpdate(str);
                        System.out.println("Record inserted.");
                        con.close();
                        break;
                    }
                    case 4: { // Display Records
                        Connection con = DriverManager.getConnection(
                                "jdbc:mysql://localhost:3306/college", "root", "root");
                        Statement stm = con.createStatement();
                        ResultSet rs = stm.executeQuery("SELECT * FROM stud");
                        while (rs.next()) {
                            System.out.println("RollNO: " + rs.getInt("rollno"));
                            System.out.println("Name: " + rs.getString("Name"));
                            System.out.println("Class: " + rs.getString("Class"));
                            System.out.println("---------------------");
                        }
                        con.close();
                        break;
                    }
                    case 5: { // Update Record
                        Connection con = DriverManager.getConnection(
                                "jdbc:mysql://localhost:3306/college", "root", "root");
                        Statement stm = con.createStatement();
                        System.out.print("Enter student rollno to update: ");
                        int id = sc.nextInt();
                        sc.nextLine(); // consume newline
                        System.out.print("Enter new name: ");
                        String name = sc.nextLine();
                        String sql = "UPDATE stud SET Name='" + name + "' WHERE rollno=" + id;
                        int rowsAffected = stm.executeUpdate(sql);
                        System.out.println(rowsAffected + " row(s) updated.");
                        con.close();
                        break;
                    }
                    case 6:
                        System.out.println("Exiting program...");
                        break;
                    default:
                        System.out.println("Invalid choice! Try again.");
                }
            } catch (Exception e) {
                System.out.println("Error: " + e);
            }

        } while (choice != 0);

        sc.close();
    }
}
OUTPUT:

========= MENU =========
1. Create Database
2. Create Table
3. Insert Record
4. Display Records
5. Update Record
6. Exit
