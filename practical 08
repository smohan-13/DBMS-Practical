create or replace procedure calc_grade(sid in number, score in number, remark out varchar2)
is
begin
  if score <= 1500 and score >= 900 then
    remark := 'passed with distinction';
  elsif score <= 899 and score >= 825 then
    remark := 'passed with first class';
  elsif score <= 824 and score >= 750 then
    remark := 'passed with second class';
  else
    remark := 'failed';
  end if;
end;
/

declare
  sid number;
  score number;
  sname varchar2(60);
  remark varchar2(30);
begin
  sid := &sid;
  select studid, fullname, totalscore into sid, sname, score from exam_result where studid = sid;

  calc_grade(sid, score, remark);

  dbms_output.put_line('Student ID: ' || sid);
  dbms_output.put_line('Name: ' || sname);
  dbms_output.put_line('Score: ' || score);
  dbms_output.put_line('Result: ' || remark);
end;
/
